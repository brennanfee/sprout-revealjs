{
  "name": "<%- projectName %>",
  "version": "0.0.1",
  "description": "<%- projectDescription %>",
  "repository": "<%- repository %>",
  "homepage": "<%- repositoryHomepageUrl %>",
  "bugs": "<%- repositoryBugsUrl %>",
  "author": "<%- author %>",
  "keywords": [
    "revealJs"
  ],
  "devDependencies": {
    "eslint": "^5.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.2",
    "prettier": "^1.13.7",
    "htmlhint": "^0.9.13",
    "stylelint": "^9.3.0",
    "stylelint-config-standard": "^18.2.0",
    "sprout": "^1.2.1"
  },
  "dependencies": {},
  "private": true,
  "license": "<%- license %>",
  "eslintConfig": {
    "env": {
      "node": true,
      "es6": true
    },
    "extends": ["plugin:prettier/recommended"]
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "prettier": {
    "printWidth": 100,
    "trailingComma": "es5",
    "proseWrap": "always",
    "semi": false,
    "singleQuote": true,
    "requirePragma": false,
    "insertPragma": false
  },
  "scripts": {
    "add": "sprout run revealjs add",
    "delete": "sprout run revealjs delete",
    "update": "sprout run revealjs update",
    "test": "echo 'Error: no tests specified' && exit 1"
  }
}
